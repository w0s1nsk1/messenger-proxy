{
  "name": "messenger-proxy",
  "version": "1.0.0",
  "description": "Messenger proxy that receives webhooks and uses Playwright for scripted actions.",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "start:debug": "HEADLESS=false node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "npm run test:unit",
    "test:unit": "jest",
    "login:manual": "LOGIN_MODE=manual node src/server.js"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "playwright": "^1.48.0",
    "playwright-chromium": "^1.56.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4"
  }
}
